@model WebApplicationMVCDemo.Models.Project

@{
    ViewData["Title"] = "Details";
}

<div class="row">

    <div class="col-md-3">
        <ul class="nav nav-pills flex-column mb-auto">
@foreach (var proj in ViewBag.Projects) {
            <li class="nav-item">
                @if(proj.Id == Model.Id)
                {
                    <a class="nav-link active" asp-action="Details" asp-route-id="@proj.Id">@proj.Title</a>
                }
                else
                {
                    <a class="nav-link" asp-action="Details" asp-route-id="@proj.Id">@proj.Title</a>
                }
            </li>
}
        </ul>
    </div>

    <div class="col-md-6">
        <h1>Details</h1>

        <div>
            <h4>Project</h4>
            <hr />
            <dl class="row">
                <!--
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.OwnerId)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.OwnerId)
                </dd>
                -->
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
